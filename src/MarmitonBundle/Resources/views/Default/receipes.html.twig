{% extends "::base.html.twig" %}
{% block body %}
    {{ include('MarmitonBundle:Default:header.html.twig') }}
<div class="clear"></div>

{% trans_default_domain 'MarmitonBundle' %}

<!--//================preloader  start==============//-->
<div class="preloader">
    <div id="loading-center">
        <div id="loading-center-absolute">
            <div class="object" id="first_object"></div>
            <div class="object" id="second_object"></div>
            <div class="object" id="third_object"></div>
            <div class="object" id="forth_object"></div>
        </div>
    </div>
</div>
<!--//================preloader  end==============//-->
<div class="clear"></div>
<!--//================Bredcrumb starts==============//-->
<section>
    <div class="bredcrumb-section padTB30 positionR">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="page-head">
                        <div class="page-header-heading">
                            <h3 class="theme-color">Recettes</h3>
                        </div>
                        <div class="breadcrumb-box">
                            <ul class="breadcrumb colorW marB0">
                                <li>
                                    <a href={{ path('marmiton_default_index') }}>Accueil</a>
                                </li>
                                <li class="active">Recettes</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//================Bredcrumb end==============//-->
<div class="clear"></div>
<!--//================Filter start==============//-->
<section class="padT60 padB10">
    <div class="theme-heading marB50 positionR">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-8 col-xs-12  col-md-offset-3 col-sm-offset-2 col-xs-offset-0 heading-box text-center">
                    <h1>Recettes</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="padT10 padB20">
<div class="filter-section marB70">
    <div class="container">
        <div class="row ">
            <form class="marB20">
                <div class="col-md-6 col-sm-6 filter-box marB30">
                    <label>Type de plat</label>
                    <select>
                        <option value="entree">Entrée</option>
                        <option value="plat_principal">Plat principal</option>
                        <option value="dessert">Dessert</option>
                    </select>
                </div>
                <div class="col-md-6 col-sm-6 filter-box marB30">
                    <label>Niveau de difficulté</label>
                    <select>
                        <option value="facile">Facile</option>
                        <option value="moyenne">Moyenne</option>
                        <option value="difficile">Difficile</option>
                    </select>
                </div>
            </form>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 marB30">
                <h4 class="marB20">Filtrer par temps de préparation</h4>
                <div id="slider-range-one" class="filter-slider"></div>
                <p><input type="text" id="amount1" readonly></p>
            </div>
            <div class="col-md-6 col-sm-6 marB30">
                <h4 class="marB20">Filtrer par temps de cuisson</h4>
                <div id="slider-range-two" class="filter-slider"></div>
                <p><input type="text" id="amount2" readonly></p>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="col-md-12 col-sm-12">
            <div class="col-md-6 col-sm-6">
                <div class="col-xs-11">
                    <div class="search_bar">
                        <input type="text" name="search" placeholder="Chercher...">
                        <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="col-xs-12 text-center">
                    <a href="#" class="itg-button">Rechercher</a>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
<!--//================Filter end==============//-->


<!--//================Blog start==============//-->
<section class="padT10 padB70" id="receipes">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="row marB20">
                    {% for receipt in pagination %}
                    <div class="col-md-3 col-sm-3 col-xs-12">
                        <div class="blog text-center theme-hover sticker marB30" id="elements">
                        {% if receipt.pictureName %}
                            <figure class="marB20">
                                <img src="{{ asset(receipt.getWebPath()) }}" alt="">
                            </figure>
                        {% else %}
                            <figure class="marB20">
                                <img src="assets/img/footer/brasserie.jpg" alt="">
                            </figure>
                        {% endif %}
                            <h3 class="marB10"><a href="#">{{ receipt.name }}</a></h3>
                            <p>
                                {{ receipt.description }}
                            </p>
                            <a href="/receipes/id/{{ receipt.id }}" class="itg-button" id="button">Voir detail</a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="pagination-box text-right marB30">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//================Blog end==============//-->
<!--//================Footer end==============//-->



</body>
</html>

<div class="clear"></div>
{{ include('MarmitonBundle:Default:footer.html.twig') }}



{% endblock body %}