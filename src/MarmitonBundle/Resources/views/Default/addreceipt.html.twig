{% extends "::base.html.twig" %}
{% block body %}
    {{ include('MarmitonBundle:Default:header.html.twig') }}
    <div class="clear"></div>

    {% if app.session.started %}
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="container" style="padding-top: 50px">
                <div class="alert alert-{{ flashMessage.alert }} alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <strong>{{ flashMessage.title }}</strong> {{ flashMessage.message }}
                </div>
        </div>
        {% endfor %}
    {% endif %}

    {% trans_default_domain 'FOSUserBundle' %}

    <section class="padT60 padB10">
        <div class="theme-heading marB50 positionR">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-8 col-xs-12  col-md-offset-3 col-sm-offset-2 col-xs-offset-0 heading-box text-center">
                        <h1>Ajouter une Recette</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

